    <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@600&display=swap" rel="stylesheet">
  <!-- Added Auth0 Lock library CDN link -->
  <script src="https://cdn.auth0.com/js/lock/12.0.2/lock.min.js"></script>

<!-- Added a script block to handle Auth0 login -->
  <script>
    // Initialized Auth0 Lock
    const lock = new Auth0Lock('xAmIzMi3vgs4srAQQZ6uuraRExaWfGKA', 'https://dev-3kdcce2iloekw6mb.us.auth0.com', {
      auth: {
        responseType: 'token id_token',
      },
    });

    // Event listener for the login button
    document.getElementById('loginButton').addEventListener('click', (event) => {
      event.preventDefault();
      lock.show();
    });

  </script>

  </head>

  <body id="welcomeBody">
    <header class="display-flex justify-space-between align-center">
      <nav id="welcomeNavBar">
  <div class="container-fluid" id="welcomeHeader">
    <h1  id="siteTitle">Jabberwocky</h1>
      <form id="loginForm">
        <div id="inputField">
        <input class="form-control me-2" type="input" id="userNameInput" placeholder="Username">
        <input class="form-control me-2" type="password" id="passwordInput" placeholder="Password">
        <div id="signUpLoginButtons">
        <button class="btn btn-outline-light" id="signUpButton">Sign Up</button>
        <button class="btn btn-outline-light" id="loginButton" >Login</button>
        </div>
        </div>
      </form>
    </div>
  </div>
</nav>
    </header>
    <div class="modal" id="signUpModal">
  <div class="modal-dialog">
    <div class="modal-content" id="modalContents">
      <div class="modal-header">
        <h5 class="modal-title">Sign up form</h5>
        <button type="button" class="btn-close" id="closeModalButton" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
         <input class="form-control me-2" type="input" id="newUserNameInput" placeholder="Username">
           <input class="form-control me-2" type="password" id="newPasswordInput" placeholder="Password">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-outline-dark" id="createAccountButton">Create account</button>
      </div>
    </div>
  </div>
</div>
    <main class="container container-fluid mt-5">
      {{{body}}}
    </main>
    <footer>
